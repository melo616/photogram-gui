<h1>List of Photos</h1>

<form action="/insert_new_photo" method="post">
  <label for="image_box">Image</label>
  <input type="text" id="image_box" placeholder="Enter a URL for the image..." name="image_url">

  <label for="caption_box">Caption</label>
  <textarea row="2" id="caption_box" placeholder="Enter a caption for the photo..." name="caption"></textarea>

  <label for="owner_id_box">Owner ID</label>
  <input type="text" id="owner_id_box" name="owner_id" placeholder="Enter an ID of a User">

  <button>Add photo</button>
</form>

<hr>

<table border="1">
  <tr>
    <th>Image</th>
    <th>Caption</th>
    <th>Owner</th>
    <th>Posted</th>
    <th></th>
  </tr>
  <% @list_of_photos.each do |a_photo| %>
  <tr>
    <td>
      <img src="<%= a_photo.image %>"/>
    </td>
    <td>
      <%= a_photo.caption %>
    </td>
    <td>
      <%= a_photo.poster.username %>
    </td>
    <td>
      <%= a_photo.created_at %>
    </td>
    <td>
      <a href="/photos/<%= a_photo.id %>">Show details</a>
    </td>
  </tr>
  <% end %>
</table>
