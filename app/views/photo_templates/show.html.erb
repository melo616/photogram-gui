<h1>Photo Details</h1>

<dl>
  <dt>Image</dt>
  <dd><img src="<%= @the_photo.image %>"/></dd>
  <dt>Caption</dt>
  <dd><%= @the_photo.caption %></dd>
  <dt>Owner</dt>
  <dd><%= @the_photo.poster.username %></dd>
  <dt>Posted</dt>
  <dd><%= @the_photo.created_at %></dd>
  <dt>Edit photo</dt>
  <dd>
    <form action="/update_photo/<%= @the_photo.id%>" method="post">
      <label for="image_box">Image</label>
      <input type="text" id="image_box" name="image_url" value="<%= @the_photo.image %>">

      <label for="caption_box">Caption</label>
      <textarea row="2" id="caption_box" value="<%= @the_photo.caption %>" name="caption"></textarea>

      <button>Update photo</button>
    </form>
  </dd>
  <dt>Delete photo</dt>
  <dd><a href="/delete_photo/<%= @the_photo.id %>">Delete this photo</a></dd>
</dl>
 
<h2>Comments</h2>

<table>
  <tr>
    <th>Commenter</th>
    <th>Comment</th>
    <th>Posted</th>
  </tr>
  <% @the_photo.comments.each do |a_comment| %>
    <tr>
      <td><%= a_comment.commenter.username %></td>
      <td><%= a_comment.body %></td>
      <td><%= a_comment.created_at %></td>
    </tr>
  <% end %>
</table>

